{
  "name": "stick-n-roll",
  "version": "1.1.2",
  "description": "stick-n-roll is a lightweight, dependency-free npm package that adds sticky-like behavior with scrolling for elements like sidebars.",
  "homepage": "https://devashtar.github.io/stick-n-roll/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/devashtar/stick-n-roll.git"
  },
  "files": [
    "dist",
    "package.json"
  ],
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsdown",
    "deploy": "gh-pages -d example"
  },
  "keywords": [
    "sticky",
    "sidebar",
    "scroll",
    "sticky-scroll",
    "layout",
    "ui",
    "dom",
    "frontend",
    "javascript",
    "typescript"
  ],
  "author": "devashtar",
  "license": "MIT",
  "devDependencies": {
    "gh-pages": "^6.3.0",
    "tsdown": "^0.20.3",
    "typescript": "^5.7.3"
  }
}
